{
	"name": "@poppinss/utils",
	"version": "3.0.3",
	"description": "Handy utilities for repetitive work",
	"main": "build/index.js",
	"files": [
		"build/src",
		"build/index.d.ts",
		"build/index.js",
		"build/helpers.d.ts",
		"build/helpers.js",
    "types"
	],
	"scripts": {
		"mrm": "mrm --preset=@adonisjs/mrm-preset",
		"pretest": "npm run lint",
		"test": "node japaFile.js",
		"clean": "del build",
		"compile": "npm run lint && npm run clean && tsc && npm run build:lodash",
    "build:lodash": "rollup --config ./rollup.config.js",
		"build": "npm run compile",
		"commit": "git-cz",
		"release": "np",
		"version": "npm run build",
		"format": "prettier --write .",
		"prepublishOnly": "npm run build",
		"lint": "eslint . --ext=.ts",
		"sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json poppinss/utils"
	},
	"keywords": [
		"utils"
	],
	"author": "virk,poppinss",
	"license": "MIT",
	"devDependencies": {
		"@adonisjs/mrm-preset": "^3.0.0",
		"@adonisjs/require-ts": "^2.0.0",
		"@poppinss/dev-utils": "^1.1.0",
		"@rollup/plugin-commonjs": "^17.1.0",
		"@rollup/plugin-node-resolve": "^11.2.0",
		"@types/fs-readdir-recursive": "^1.0.0",
		"@types/lodash": "^4.14.168",
		"@types/ms": "^0.7.31",
		"@types/node": "^14.14.25",
		"@types/pluralize": "0.0.29",
		"@types/require-all": "^3.0.1",
		"commitizen": "^4.2.3",
		"cz-conventional-changelog": "^3.3.0",
		"del-cli": "^3.0.1",
		"doctoc": "^2.0.0",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-adonis": "^1.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"github-label-sync": "^2.0.0",
		"husky": "^4.3.8",
		"japa": "^3.1.1",
		"lodash": "^4.17.21",
		"mrm": "^2.5.15",
		"np": "^7.2.0",
		"prettier": "^2.2.1",
		"rollup": "^2.39.0",
		"rollup-plugin-terser": "^7.0.2",
		"typescript": "^4.1.3"
	},
	"nyc": {
		"exclude": [
			"test"
		],
		"extension": [
			".ts"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
			"commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
		}
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"np": {
		"contents": ".",
		"anyBranch": false
	},
	"dependencies": {
		"@types/bytes": "^3.1.0",
		"@types/he": "^1.1.1",
		"buffer-alloc": "^1.2.0",
		"bytes": "^3.1.0",
		"change-case": "^4.1.2",
		"cuid": "^2.1.8",
		"fast-safe-stringify": "^2.0.7",
		"fs-readdir-recursive": "^1.1.0",
		"he": "^1.2.0",
		"kind-of": "^6.0.3",
		"ms": "^2.1.3",
		"pluralize": "^8.0.0",
		"require-all": "^3.0.0",
		"resolve-from": "^5.0.0",
		"slugify": "^1.4.6",
		"truncatise": "0.0.8"
	},
	"directories": {
		"doc": "docs",
		"test": "test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/poppinss/utils.git"
	},
	"bugs": {
		"url": "https://github.com/poppinss/utils/issues"
	},
	"homepage": "https://github.com/poppinss/utils#readme"
}
